{
  "version": "1.0.0",
  "description": "Configuración para sincronización con Figma",
  "sync": {
    "method": "figma-tokens-plugin",
    "tokensDirectory": "./tokens",
    "autoSync": false,
    "validateBeforeSync": true,
    "githubSync": {
      "enabled": false,
      "owner": "madergk",
      "repository": "bio-ds",
      "branch": "main",
      "path": "tokens",
      "token": "GITHUB_PERSONAL_ACCESS_TOKEN"
    }
  },
  "naming": {
    "separator": "/",
    "case": "lowercase",
    "compoundWords": "camelCase"
  },
  "validation": {
    "requiredCategories": ["color", "spacing", "typography", "border"],
    "strictMode": false,
    "warnOnUnknownTokens": true
  },
  "mapping": {
    "color": {
      "base": ["white", "black"],
      "primary": ["50", "100", "200", "300", "400", "500", "600", "700", "800", "900"],
      "semantic": ["success", "warning", "error", "info"]
    },
    "spacing": ["xs", "sm", "base", "md", "lg", "xl", "xxl", "xxxl"],
    "typography": {
      "fontFamily": ["primary", "monospace"],
      "fontSize": ["xs", "sm", "base", "lg", "xl", "2xl", "3xl", "4xl"],
      "fontWeight": ["light", "normal", "medium", "semibold", "bold"],
      "lineHeight": ["tight", "normal", "relaxed"]
    },
    "border": {
      "radius": ["none", "sm", "md", "lg", "full"],
      "width": ["thin", "medium", "thick"]
    }
  },
  "workflow": {
    "figmaToCode": {
      "steps": [
        "1. Actualizar tokens en Figma usando Figma Tokens Plugin",
        "2. Exportar tokens desde el plugin a ./tokens",
        "3. Ejecutar: npm run tokens:sync",
        "4. Verificar cambios: git diff tokens/"
      ]
    },
    "codeToFigma": {
      "steps": [
        "1. Actualizar tokens en ./tokens/*.json",
        "2. Ejecutar: npm run tokens:validate",
        "3. En Figma: Plugins → Figma Tokens → Import",
        "4. Seleccionar carpeta ./tokens"
      ]
    }
  }
}

