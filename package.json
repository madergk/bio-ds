{
  "name": "@madergk/bio-ds",
  "version": "0.1.1",
  "type": "module",
  "description": "Bio Design System - Angular component library with Bootstrap styling and CSS Modules",
  "keywords": [
    "angular",
    "design-system",
    "component-library",
    "bootstrap",
    "css-modules",
    "design-tokens",
    "ui-components"
  ],
  "author": "mgomez <mgomez@wigou.co>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/madergk/bio-ds.git"
  },
  "bugs": {
    "url": "https://github.com/madergk/bio-ds/issues"
  },
  "homepage": "https://github.com/madergk/bio-ds#readme",
  "scripts": {
    "build": "npm run tokens:build && ng build",
    "build:library": "npm run tokens:build && ng build --configuration production",
    "build:clean": "rm -rf dist && npm run build:library",
    "build:verify": "node scripts/verify-build.js",
    "prepublishOnly": "npm run build:verify",
    "version": "npm run release:changelog",
    "postversion": "git push && git push --tags",
    "release:validate": "npm run lint && npm run test && npm run tokens:validate && npm run build:clean && npm run build:verify",
    "release:changelog": "echo '⚠️  Remember to update CHANGELOG.md with the new version changes!'",
    "release:patch": "npm run release:validate && npm version patch && npm publish",
    "release:minor": "npm run release:validate && npm version minor && npm publish",
    "release:major": "npm run release:validate && npm version major && npm publish",
    "release:dry-run": "npm run build:clean && npm publish --dry-run",
    "version:patch": "npm version patch --no-git-tag-version",
    "version:minor": "npm version minor --no-git-tag-version",
    "version:major": "npm version major --no-git-tag-version",
    "publish:npm": "npm publish --registry=https://registry.npmjs.org",
    "publish:github": "npm publish --registry=https://npm.pkg.github.com",
    "publish:local": "npm pack",
    "test": "ng test",
    "lint": "ng lint",
    "tokens:build": "style-dictionary build --config style-dictionary.config.js",
    "tokens:watch": "style-dictionary build --config style-dictionary.config.js --watch",
    "tokens:validate": "node scripts/validate-tokens.js",
    "tokens:sync": "node scripts/sync-figma-tokens.js",
    "storybook": "ng run bio-ds:storybook",
    "build-storybook": "ng run bio-ds:build-storybook",
    "docs:build": "npm run tokens:build && npm run build-storybook"
  },
  "dependencies": {
    "tslib": "^2.6.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~17.0.0",
    "@angular-devkit/core": "~17.0.0",
    "@angular/animations": "^17.3.12",
    "@angular/cli": "~17.0.0",
    "@angular/common": "^17.3.12",
    "@angular/compiler": "^17.3.12",
    "@angular/compiler-cli": "^17.0.0",
    "@angular/core": "^17.3.12",
    "@angular/forms": "^17.3.12",
    "@angular/platform-browser": "^17.3.12",
    "@angular/platform-browser-dynamic": "^17.3.12",
    "@angular/router": "^17.3.12",
    "@compodoc/compodoc": "^1.1.32",
    "@storybook/addon-docs": "^8.6.14",
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/addon-interactions": "^8.6.14",
    "@storybook/addon-onboarding": "8.6.14",
    "@storybook/angular": "^8.6.14",
    "@storybook/blocks": "^8.6.14",
    "@storybook/test": "^8.6.14",
    "@types/node": "^20.10.0",
    "ng-packagr": "~17.0.0",
    "rxjs": "~7.8.0",
    "storybook": "^8.6.14",
    "style-dictionary": "^4.0.0",
    "typescript": "~5.2.2",
    "zone.js": "^0.14.10"
  },
  "peerDependencies": {
    "@angular/animations": "^17.0.0",
    "@angular/common": "^17.0.0",
    "@angular/compiler": "^17.0.0",
    "@angular/core": "^17.0.0",
    "@angular/forms": "^17.0.0",
    "@angular/platform-browser": "^17.0.0",
    "@angular/platform-browser-dynamic": "^17.0.0",
    "@angular/router": "^17.0.0",
    "rxjs": "~7.8.0",
    "zone.js": "~0.14.3"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md"
  ],
  "main": "dist/bio-ds/fesm2022/madergk-bio-ds.mjs",
  "types": "dist/bio-ds/index.d.ts"
}
